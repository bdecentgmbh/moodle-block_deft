{{!
    @template block_deft/tasks

    This template renders the tasks manager for deft response block

    Example context (json):
    {
        "tasks": [
            {
                "type": "text",
                "configdata": {
                    "name": "Welcome",
                    "content": "hello"
                }
            }
        ]
    }
}}
<div class="row">
    {{# tasks }}
    <div class="col-3 p-1">
        <div class="card deft-task-{{ type }}" data-id="{{ id }}" data-type="{{ type }}">
            <div class="card-body">
                <h5 class="card-title">{{configdata.name}}</h5>
                {{ type }}
                <div class="task-controls">
                    <form onsubmit="return false;">
                    <input type="hidden" name="id" value="{{ id }}" />
                    <input type="hidden" name="type" value="{{ type }}" />
                    {{# canedit }}
                    <button name="action" value="edit" title="{{# str }} edit {{/ str }}" class="icon fa fa-cog border-0"></button>
                    <button name="action" value="delete" title="{{# str }} delete {{/ str }}" class="icon fa fa-trash border-0"></button>
                    <button name="action" value="move" title="{{# str }} move {{/ str }}" class="icon fa fa-arrows border-0"></button>
                    {{/ canedit }}
                    {{# statedata.visible }}<button name="action" value="status" title="{{# str }} hide {{/ str }}" class="icon fa fa-eye border-0"></button>{{/ statedata.visible }}
                    {{^ statedata.visible }}<button name="action" value="status" title="{{# str }} show {{/ str }}" class="icon fa fa-eye-slash border-0"></button>{{/ statedata.visible }}
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{/ tasks }}
</div>
